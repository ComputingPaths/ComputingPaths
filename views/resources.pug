extends ../template.pug

block style
  link(rel='stylesheet' href='/css/resources.css')

block main

  div(class='page-header')
    svg
      rect
      circle
    h1 Facilities &amp; Resources

  div(class="res-banner")

    div(class="container")

      div(class="row")

        div(class="col-md-1 res-control-container hidden-sm-down")
          a(class="carousel-control" href="#res-carousel" role="button" data-slide="prev")
            i(class='fa fa-arrow-left')

        div(id="res-carousel" class="carousel slide col-md-10" data-ride="carousel")
          
          div(class="carousel-inner" role="listbox")
            div(class="carousel-item active")
              img(src='/img/temp3.svg')
              div(class="carousel-caption")
                a(href="#")
                  h2 Resource Name 1


            div(class="carousel-item")
              img(src='/img/temp3.svg')
              div(class="carousel-caption")
                a(href="#")
                  h2 Resource Name 2


            div(class="carousel-item")
              img(src='/img/temp3.svg')
              div(class="carousel-caption")
                a(href="#")
                  h2 Resource Name 3

        div(class="col-md-1 res-control-container hidden-sm-down")
          a(class="carousel-control float-right" href="#res-carousel" role="button" data-slide="next")
            i(class='fa fa-arrow-right')

      //div(class="row")
        div(class="col-xs-8 col-md-6 offset-md-1 carousel-caption")
          a(href="#")
            h2 Resource Name

        div(class="col-xs-4 col-md-4")


  div(class='page-banner')
    h1 Browse our expansive list of resources

  div(class='cards')
    div(class='container')
      div(class='row align-items-start')
        div(class='nice-sidebar col-lg-3')
          a(data-toggle='collapse' data-target='#tags') Resource Types
            i(class='fa fa-chevron-down')
          ul(id='tags' class='collapse show')
            div(class='row no-gutters')
              each t in resourceTags
                li(class='col-4 col-lg-12') #{t}

        div(class='col-lg-9')
          - for(let i = 0; i < resources.length; i++)
            div(class='res-card row no-gutters')
              div(class='col-4 map')
                a(class='' href='maps.ucsd.edu')
                  //-img(class='img-fluid' src='/img/temp1.svg')
              div(class='col-8 header')
                a(data-toggle='collapse' data-target=`#res-txt-${i}`) #{resources[i].name}
                div 
                  each t in resources[i].tags
                    span(class='tag') #{resourceTags[t]}
              div(id=`res-txt-${i}` class='collapse text col-12') 
