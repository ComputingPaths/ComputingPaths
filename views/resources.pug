extends ../template.pug

block style
  link(rel='stylesheet' href='/css/resources.css')

block script
  script(src='/js/resources.js')

block main
  div(class='page-header')
    svg
      rect
      circle
    h1 Facilities &amp; Resources

  div(class='res-banner')
    div(class='container')
      div(class='row align-items-end')
        div(class='col-md-1 hidden-sm-down carousel-control')
          a(href='#res-carousel' data-slide='prev')
            i(class='fa fa-arrow-left fa-2x')

        div(id='res-carousel' class='carousel slide col-md-10' data-ride='carousel')
          div(class='carousel-inner')
            - for(let i = 0; i < 4; i++)
              div(class='carousel-item' class=i === 0 ? 'active' : '')
                a(class='img' href='#')
                a(class='caption' href='#') Resource Name #{i}
          div(class='indicator')
            - for(let i = 0; i < 4; i++)
              svg
                circle

        div(class='col-md-1 carousel-control hidden-sm-down')
          a(class='float-right' href='#res-carousel' data-slide='next')
            i(class='fa fa-arrow-right fa-2x')


  div(class='page-banner')
    h1 Browse our expansive list of resources

  div(class='cards')
    div(class='container')
      div(class='row align-items-start')
        div(class='nice-sidebar col-lg-3')
          a(class='flip-on-click' data-toggle='collapse' data-target='#tags') Resource Types
            i(class='fa fa-chevron-down')
          ul(id='tags' class='collapse show')
            div(class='row no-gutters')
              each t in resourceTags
                li(class='col-4 col-lg-12') #{t}

        div(class='col-lg-9')
          - for(let i = 0; i < resources.length; i++)
            - var mapImgPath = resources[i].mapImage
            div(class='res-card row no-gutters filtered')
              a(href=resources[i].mapLink class="col-xs-12 col-md-4 map") 
                img(src=resources[i].mapImage style="object-fit: cover;")
              div(class='col-xs-12 col-md-8 header')
                a(class='flip-on-click' data-toggle='collapse' href=`#res-txt-${i}`) #{resources[i].name}
                  i(class='fa fa-chevron-down')
                div 
                  each t in resources[i].tags
                    span(class='tag') #{resourceTags[t]}
              div(id=`res-txt-${i}` class='collapse text col-12') 
                h1 DESCRIPTION
                p #{resources[i].description}
                a Find out more 
                  i(class='fa fa-arrow-right')
