extends ../template.pug

block style
	link(
		rel='stylesheet'
		href='/css/resources.css'
	)
block main
	div(class='page-header')
		svg
			rect
			circle
		h1 Facilities &amp; Resources

	div(class="res-banner")

		div(class="container")

			div(class="row")

				div(class="col-md-1 res-control-container hidden-sm-down")
					a(class="carousel-control" href="#res-carousel" role="button" data-slide="prev")
						i(class='fa fa-arrow-left')

				div(id="res-carousel" class="carousel slide col-md-10" data-ride="carousel")
					
					div(class="carousel-inner" role="listbox")
						div(class="carousel-item active")
							img(src='/img/temp3.svg')
							div(class="carousel-caption")
								a(href="#")
									h2 Resource Name 1


						div(class="carousel-item")
							img(src='/img/temp3.svg')
							div(class="carousel-caption")
								a(href="#")
									h2 Resource Name 2


						div(class="carousel-item")
							img(src='/img/temp3.svg')
							div(class="carousel-caption")
								a(href="#")
									h2 Resource Name 3

				div(class="col-md-1 res-control-container hidden-sm-down")
					a(class="carousel-control float-right" href="#res-carousel" role="button" data-slide="next")
						i(class='fa fa-arrow-right')

			//div(class="row")
				div(class="col-xs-8 col-md-6 offset-md-1 carousel-caption")
					a(href="#")
						h2 Resource Name

				div(class="col-xs-4 col-md-4")


	div(class="res-browse")
		h1 Browse our expansive list of resources

	div(class="container")
		div(class="row")

			div(class="res-sidebar col-3 sticky-top")
				h3 Academic Suport
				h3 Buildings
				h3 Events 
				h3 Showcases
				h3 Equipment
				h3 Workspaces

		
			-for(let i=0; i< 3;i++)
				div(class="col-9" class=i === 0 ? '' : 'offset-3' id="accordion" role="tablist" aria-multiselectable="true")

					div(class="card")
						div(role="tab" id="heading-"+i)
							//-link to map
							a(href="maps.ucsd.edu")
								img(src="/img/temp3.svg" alt="+")
							a(data-toggle="collapse" data-parent="#accordion" href="#collapse-"+i aria-expanded="false" aria-controls="collapse-"+i)
								div(class="res-card")
									div(class="cardinfo")
										div(class="card-head")
											h3 #{resourceCards[i].name}
											div(class="tags")
												each val in resourceCards[i].tags
													div(class="colorbackground") #{resourceTags[val]}
													div(class="tag-spacer")
						div(id="collapse-"+i class="collapse" role="tabpanel" aria-labelledby="heading-"+i)
