extends ../template.pug

block style
  link(rel='stylesheet' href='/css/resources.css')

block script
  script(src='/js/resources.js')

block main
  div(class='page-header row')
    div(class='col-12 col-md-4 push-md-4')
    div(class='col-12 col-md-8 pull-md-4')
      svg(class='hidden-xs-down')
        rect
        circle
      h1 Facilities &amp; Resources

  div(class='res-banner')
    div(class='container')
      div(class='row align-items-end')
        div(class='col-md-1 carousel-control hidden-sm-down')
          a(href='#res-carousel' data-slide='prev')
            i(class='fa fa-arrow-left fa-2x')

        div(id='res-carousel' class='carousel slide col-md-10' data-ride='carousel')
          div(class='carousel-inner')
            - for (let i = 0; i < resourceBanner.length; i++)
              div(class='carousel-item' class=i === 0 ? 'active' : '')
                a(class='img' href=resourceBanner[i].link)
                  img(src=resourceBanner[i].image)
                a(class='caption' href=resourceBanner[i].link) #{resourceBanner[i].name}
          div(class='indicator ')
            - for (let i = 0; i < resourceBanner.length; i++)
              svg
                circle

        div(class='col-md-1 carousel-control hidden-sm-down')
          a(class='float-right' href='#res-carousel' data-slide='next')
            i(class='fa fa-arrow-right fa-2x')

  div(class='page-blurb')
    h1 Become familiar with campus resources

  div(class='cards')
    div(class='container')
      div(class='row align-items-start')
        div(class='nice-sidebar col-lg-3')
          div(class='margin')
          a(class='flip-on-click' data-toggle='collapse' data-target='#tags') Resource Types
            i(class='fa fa-chevron-down')
          ul(id='tags' class='collapse')
            div(class='row')
              each t in resourceTags
                li(class='col-12 col-sm-6 col-md-4 col-lg-12 no-select') #{t}

        div(class='col-lg-9')
          - for(let i = 0; i < resources.length; i++)
            div(class='res-card row no-gutters filtered')
              a(href=resources[i].mapLink class="col-lg-4 map-container")
                div(class='map')
                  img(src=resources[i].mapImage)
              a(class='flip-on-click col-lg-8 header' data-toggle='collapse' href=`#res-txt-${i}`)
                h3 #{resources[i].name}
                  i(class='fa fa-chevron-down')
                each t in resources[i].tags
                  h5(class='tag') #{resourceTags[t]}
              div(id=`res-txt-${i}` class='collapse text col-12')
                div
                  h1 DESCRIPTION
                  p #{resources[i].description}
                  a(href=resources[i].link) Find out more 
                    i(class='fa fa-arrow-right')
