extends ../template.pug


block style
  link(rel='stylesheet' href='/css/index.css')
  //- link(href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css")
block script
  script(src='/js/index.js')

block main
  div(class='title')
    div(class='container-fluid')
      div(class='row no-gutters')
        div(class='col-sm-12')
          div(id='topCarousel' class='carousel slide' data-ride='carousel')
            //- Indicators
            ol(class="carousel-indicators")
              li(data-target="#topCarousel" data-slide-to="0" class="active")
              li(data-target="#topCarousel" data-slide-to="1")
              li(data-target="#topCarousel" data-slide-to="2")
              li(data-target="#topCarousel" data-slide-to="3")
              li(data-target="#topCarousel" data-slide-to="4")

            //- Wrapper for slides
            div(class="carousel-inner")
              // images should be around 600px high and 1280px wide
              div(class="carousel-item active")
                img(src="/img/splashes/splash_home.jpg")
              div(class="carousel-item")
                img(src="img/ElectricalEngineering.jpg")
              div(class="carousel-item")
                img(src="../img/DesignLHome.jpg")
              div(class="carousel-item")
                img(src="../img/IDEAHome.jpg")
              div(class="carousel-item")
                img(src="../img/Math-CSHome.jpg")
            //- Left & Right Controls
            a(class="carousel-control-prev" href="#topCarousel" role="button" data-slide="prev")
              span(class="carousel-control-prev-icon")
              span(class="sr-only") Previous
            a(class="carousel-control-next" href="#topCarousel" role="button" data-slide="next")
              span(class="carousel-control-next-icon")
              span(class="sr-only") Next
          div(class="carousel-caption d-none d-md-block" id="top-carousel-caption")
            h1(class='col-12') Discover your path.
            h2(class='col-12') Find out how to make computing part of your journey.

  div(class='stories section')
    div(class='section-header')
      h1 Stories &amp; Advice
      hr
    div(class='container')
      div(class='row no-gutters')
        div(class='col-lg-5 img')
        div(class='col-lg-7 text')
          div
            h2(class="med") "What sealed the deal on software engineering for me was that rush you get when something finally works."
            h3(class="bold") Rachel Keirouz <span>| Mathematics-Computer Science</span>
      a(class='link-btn' href=pages[0].link) Read their stories

  div(class='majors section')
    div(class='section-header')
      h1 The Majors
      hr
    div(class='container')
      div(class='row')
        aside(class='hidden-sm-down col-lg-5')
          ul(class='row')
            div(class='col-sm-6 col-lg-12')
              - for (let i = 0; i < Math.ceil(majors.length / 2); i++)
                li #{majors[i].name}
            div(class='col-sm-6 col-lg-12')
              - for (let i = Math.ceil(majors.length / 2); i < majors.length; i++)
                li #{majors[i].name}
          a(class='link-btn hidden-md-down' href=pages[1].link) Explore the majors
        main(class='col-lg-7')
          each m in majors
            img(src=m.image class='img-fluid')
          div
            article
              h1
              each m in majors
                h2 #{m.hook}
            each m in majors
              a(href=`/majors.html#${m.short}`)
                i(class='fa fa-arrow-right fa-2x')
      nav(class='hidden-md-up')
        a(id='prev-major')
          i(class='fa fa-arrow-left fa-2x')
        a(id='next-major')
          i(class='fa fa-arrow-right fa-2x')
      a(class='link-btn hidden-lg-up' href=pages[1].link) Explore the majors


  div(class='orgs section')
    div(class='section-header')
      h1 Connect
      hr
    div(class='container')
      main
        a(href='/connect.html')
          img(src='/img/longimage.png')
      a(class='link-btn' href=href=pages[2].link) Get involved

  div(class='projects section')
    div(class='section-header')
      h1 Triton Projects
      hr
    div(class='container')
      div(class='row align-items-center')
        a(class='prev-proj col-md-1 hidden-sm-down')
          i(class='fa fa-arrow-left fa-2x')
        div(id='carouselExampleControls' class='carousel col-md-10 slide')
          div(class='carousel-inner row')
            - for (let i = 0; i < projects.length; i++)
              div(class='proj-card col-12 col-lg-6')
                img(src=`/img/projectImages/${projects[i].imageFolder}/1.jpg`)
                div
                  h1 #{projects[i].name}
                  //- h2 #{projects[i].intro}
                  a(href=projects[i].link) Find out more
                    i(class='fa fa-arrow-right')
        a(class='next-proj col-md-1 hidden-sm-down')
          i(class='float-right fa fa-arrow-right fa-2x')
      nav
        a(class='prev-proj hidden-md-up')
          i(class='fa fa-arrow-left fa-2x')
        div(class='hidden-sm-down')
        a(class='next-proj hidden-md-up')
          i(class='fa fa-arrow-right fa-2x')

      a(class='link-btn' href='/projects.html') More Triton projects

  div(class='resources section')
    div(class='section-header')
      h1 Start Exploring
      hr
    div(class='container')
      div(class='row')
        div(class='col-md-4 offset-md-1')
          h2(class='bold') Events
          p From hackathons to career fairs, computing students have access to a diverse range of exciting events. Search for events to begin your journey on a computing path.
        div(class='col-md-4 offset-md-2')
          h2(class='bold') Facilities
          p UC San Diego enjoys state-of-the art facilities and resources that enrich the computing experience. Discover innovative spaces, tools, and support offered to computing students.
      a(class='link-btn' href=pages[4].link) See the resources
