extends ../template.pug

block style
	link(
		rel='stylesheet'
		href='/css/projects.css'
	)
	
block script
	script(src='/js/projects.js')
	
block main
	div(class='page-header')
		svg
			rect
			circle
		h1 Triton Projects
			
	div(class='intro-text')
		p(class='size-28')  This is the projects page. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut pretium pretium tempor. Ut eget imperdiet neque.This is the projects page. 
		
	div(class='intro-prompt')
		h3 Explore what these Tritons have created
		
	section
		div(class='container')
			div(class='row')
				div(class='sticky-top project-type-wrapper col-3 sticky-top')
					a(data-toggle='collapse' data-target='#project-types') Project Types
					ul(class='collapse show' id='project-types')
						each p in projectTags
							li                 
								a(href='#' style=`color: ${p.color};`) #{p.type}
				
				- for(let i = 0; i < projects.length; i++)
					a(class='col-9' class = i === 0 ? '' : 'offset-lg-3' data-toggle='modal' data-target='#proj-modal')
						div(class='projectcard')
							img(src='/img/temp3.svg' alt='+')
							div(class='cardinfo')
								p(class='project-name') #{projects[i].projectName}
								p(class='project-creator') #{projects[i].organization}
								div(class='tags')
									div(class='colorbackground') #{projects[i].projectTag}
								i(class='fa fa-expand')
		
	// Project Modal
	div(class='modal fade' id='proj-modal' tabindex='-1' role='dialog' aria-hidden='true')
		div(class='modal-dialog' role='document')

			div(class='modal-content')

				// Project Title
				div(class='modal-header')
					h3(id='title' class='project-title bold') studyspace
					button(type="button" class="close" data-dismiss="modal" aria-label="Close")
						span(aria-hidden="true") &times;

				// Project Image Carousel
				// div(class='modal-slideshow')
				// 	div(id='proj-carousel' class='carousel slide' data-ride='carousel')

				// 		// Indicators
				// 		ol(class='carousel-indicators')
				// 			li(data-target='#proj-carousel' data-slide-to='0' class='active')
				// 			li(data-target='#proj-carousel' data-slide-to='1')

				// 		// Carousel
				// 		div(class="carousel-inner" role="listbox")
				// 			div(class='carousel-item active')
				// 				img(src='/img/temp1.svg')
				// 			div(class='carousel-item')
				// 				img(src='/img/temp1.svg')

				// 		// Previous
				// 		a(class='carousel-control-prev' href='#proj-carousel' role='button' data-slide='prev')
				// 			i(class='fa fa-arrow-left fa-3x')

				// 		// Next
				// 		a(class='carousel-control-next' href='#proj-carousel' role='button' data-slide='next')
				// 			i(class='fa fa-arrow-right fa-3x')

				// Modal Body
				div(class='modal-body')

					div(class='container-fluid')

						div(class='row slideshow')
							div(id='proj-carousel' class='carousel slide offset-lg-1 col-lg-10 col-12' data-ride='carousel')

								// Indicators
								ol(class='carousel-indicators')
									li(data-target='#proj-carousel' data-slide-to='0' class='active')
									li(data-target='#proj-carousel' data-slide-to='1')

								// Carousel
								div(class="carousel-inner" role="listbox")
									div(class='carousel-item active')
										img(src='/img/temp1.svg')
									div(class='carousel-item')
										img(src='/img/temp1.svg')

						div(class='row proj-info')

							div(class='project-description col-lg-7')
								p.description-title DESCRIPTION
								p.description For the course CSE 110 (Software Engineering), students are offered the opportunity to learn common software practices used in industry on an application which they build with a small team of developers. Each team has one quarter to create a project that demonstrates a creative solution to a problem.


							div(class='project-details offset-lg-1 col-lg-4')

								div(class='detail-item')
